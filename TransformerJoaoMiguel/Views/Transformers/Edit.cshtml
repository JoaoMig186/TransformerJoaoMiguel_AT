@model TransformerJoaoMiguel.Models.Transformer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transformer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veiculo" class="control-label"></label>
                <input asp-for="Veiculo" class="form-control" />
                <span asp-validation-for="Veiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoUpload" class="control-label">Imagem:</label>
                <input asp-for="FotoUpload" type="file" class="form-control" />
                <span asp-validation-for="FotoUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ForcaDeAtaque" class="control-label"></label>
                <input asp-for="ForcaDeAtaque" class="form-control" />
                <span asp-validation-for="ForcaDeAtaque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoTransformerId" class="control-label">Tipo de Transformer - (1) Autobot / (2) Decepticon:</label>
                <select asp-for="TipoTransformerId" class="form-control" asp-items="ViewBag.TipoTransformerId"></select>
                <span asp-validation-for="TipoTransformerId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
