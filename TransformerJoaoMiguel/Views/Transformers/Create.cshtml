@model TransformerJoaoMiguel.Models.Transformer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transformer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Veiculo" class="control-label">Veículo ou outro objeto de transformação</label>
                <input asp-for="Veiculo" class="form-control" />
                <span asp-validation-for="Veiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoUpload" class="control-label">Imagem:</label>
                <input asp-for="FotoUpload" type="file" class="form-control" />
                <span asp-validation-for="FotoUpload" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ForcaDeAtaque" class="control-label">Força de Ataque do Transformer (número de 1 a 10)</label>
                <input asp-for="ForcaDeAtaque" class="form-control" />
                <span asp-validation-for="ForcaDeAtaque" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="TipoTransformerId" class="control-label">Tipo de Transformer - (3) Autobot / (4) Decepticon:</label>
                <select asp-for="TipoTransformerId" class ="form-control" asp-items="ViewBag.TipoTransformerId"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
