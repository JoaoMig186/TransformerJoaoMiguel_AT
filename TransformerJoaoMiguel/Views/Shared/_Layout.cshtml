<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TransformerJoaoMiguel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TransformerJoaoMiguel.styles.css" asp-append-version="true" />
    <style>
        .parte-dinamica-footer{
           width: 100%;
           display: flex;
           justify-content: center;
           align-items: center;
        }

            .parte-dinamica-footer .img-fot-conteiner{
                  width: 50px;
                  height: 50px;
                  border-radius: 50%;
            }

            .parte-dinamica-footer .img-fot-conteiner img{
              width: 100%;
              height: 100%;
              object-fit: cover;
              border-radius: 50%;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TransformerJoaoMiguel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TipoTransformers" asp-action="Index">Tipo transformers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Transformers" asp-action="Index">Transformers</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="parte-dinamica-footer">
                @{
                    var url = Context.Request.Path;
                }
                @switch (url.Value.ToLower())
                {
                    case "/" :
                        <div class="img-fot-conteiner">
                            <img class="imagem-footer-dinamico" src="https://olhardigital.com.br/wp-content/uploads/2023/04/Transformers-7.jpg" />
                        </div>
                        <p> - Home</p>
                        break;
                    case "/transformers/create":
                        <div class="img-fot-conteiner">
                            <img class="imagem-footer-dinamico" src="https://citeseriesefilmes.com.br/wp-content/uploads/2023/05/TF7_INTL_DGTL_TSR_IntlOptimusPrime_2025x3000_1SHT_OV-scaled-e1683829160552.webp" />
                        </div>
                        <p> - Create</p>
                        break;
                    case "/tipotransformers/create":
                        <div class="img-fot-conteiner">
                            <img class="imagem-footer-dinamico" src="https://citeseriesefilmes.com.br/wp-content/uploads/2023/05/TF7_INTL_DGTL_TSR_IntlOptimusPrime_2025x3000_1SHT_OV-scaled-e1683829160552.webp" />
                        </div>
                        <p> - Create</p>
                        break;
                    case "/transformers":
                        <div class="img-fot-conteiner">
                            <img class="imagem-footer-dinamico" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT1SDwHd6ILXPhQMdIn213eQjUfeM0mEVZws5Y3EHgRVPtFBE7HkhSrplVnDAvWqXRivzU&usqp=CAU" />
                        </div>
                        <p> - Listagem</p>
                        break;
                    case "/tipotransformers":
                        <div class="img-fot-conteiner">
                            <img class="imagem-footer-dinamico" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT1SDwHd6ILXPhQMdIn213eQjUfeM0mEVZws5Y3EHgRVPtFBE7HkhSrplVnDAvWqXRivzU&usqp=CAU" />
                        </div>
                        <p> - Listagem</p>
                        break;
                }
            </div>
            &copy; 2023 - TransformerJoaoMiguel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
